<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attr="http://schemas.android.com/apk/res/com.ds365.erp.pda"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.ds365.erp.wms.pda.common.headtitlebar.SubHeadTitleBar
        android:id="@+id/purchaseReturnOrderBillList_headerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.ds365.commons.widget.CommonTitleTab
        android:id="@+id/purchaseReturnOrderBillList_titleTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        attr:selectTextBackground="@color/tab_uncheck"
        attr:textSize="@dimen/title_tab_text_size"
        attr:selectTextColor="@color/tab_checked"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:id="@+id/purchaseReturnOrderBillList_billCode_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退货单号:" />

        <com.ds365.commons.widget.SearchField
            android:id="@+id/purchaseReturnOrderBillList_billCode_value"
            style="@style/editTxtStyle_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/purchaseReturnOrderBillList_billCodeScan_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/code_scan" />

        <ImageView
            android:id="@+id/purchaseReturnOrderBillList_billCodeSearch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/search" />
    </LinearLayout>

    <include layout="@layout/common_line" />

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/purchaseReturnOrderBillList_details"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/line"
        android:dividerHeight="0.5dp" />

</LinearLayout>