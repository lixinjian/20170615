<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attr="http://schemas.android.com/apk/res/com.ds365.erp.pda"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/purchaseEnterDetailEditAdapter_produceDate_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="生产日期:" />

        <com.ds365.commons.widget.DateEditField
            android:id="@+id/purchaseEnterDetailEditAdapter_produceDate_value"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            attr:dateformat="yyyyMMdd" />

        <TextView
            android:id="@+id/purchaseEnterDetailEditAdapter_produceBatchNo_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生产批次:" />

        <EditText
            android:id="@+id/purchaseEnterDetailEditAdapter_produceBatchNo_value"
            style="@style/editTxtStyle_text"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/purchaseEnterDetailEditAdapter_unitQty_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/received_unitqty" />

        <com.ds365.commons.widget.IntEditField
            android:id="@+id/purchaseEnterDetailEditAdapter_unitQty_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/purchaseEnterDetailEditAdapter_minUnitQty_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/received_min_unitqty" />

        <com.ds365.commons.widget.IntEditField
            android:id="@+id/purchaseEnterDetailEditAdapter_minUnitQty_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>