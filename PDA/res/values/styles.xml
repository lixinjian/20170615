<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 关于首页底部的RadioButton的样式控制 -->
    <style name="radiobutton_mainactivity">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/mh5.0dimens5.0dp</item>
    </style>
    <!-- popuwindow -->
    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/menushow</item>
        <item name="android:windowExitAnimation">@anim/menuhide</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="password_editText">
        <item name="android:background">@drawable/dateedit_background_shape</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="editTxtStyle_number">
        <item name="android:background">@drawable/dateedit_background_shape</item>
        <item name="android:inputType">number</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="editTxtStyle_text">
        <item name="android:background">@drawable/dateedit_background_shape</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="loginButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_button_seclector</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_submit_save">
        <item name="android:background">@drawable/login_button_seclector</item>
        <item name="android:text">@string/submit</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>